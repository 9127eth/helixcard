rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Fields that may only be written by the Admin SDK (server-side).
      // Client writes to any of these are rejected; the server (webhook,
      // create-subscription, etc.) uses the Admin SDK which bypasses rules.
      function isNotChangingProtectedFields() {
        let protected = [
          'isPro', 'isProType', 'subscriptionType',
          'stripeSubscriptionId', 'stripeCustomerId',
          'subscriptionStatus', 'subscriptionUpdatedAt',
          'subscriptionCreatedAt', 'lifetimePurchase',
          'couponUsed', 'admin'
        ];
        return !request.resource.data.diff(resource.data).affectedKeys().hasAny(protected);
      }

      allow read: if request.auth != null && request.auth.uid == userId;

      // On create, enforce safe defaults so a client can never
      // bootstrap itself as a pro / admin user.
      allow create: if request.auth != null && request.auth.uid == userId
        && request.resource.data.isPro == false
        && request.resource.data.get('isProType', 'free') == 'free'
        && !request.resource.data.keys().hasAny([
          'subscriptionType', 'stripeSubscriptionId', 'stripeCustomerId',
          'subscriptionStatus', 'subscriptionUpdatedAt', 'subscriptionCreatedAt',
          'lifetimePurchase', 'couponUsed', 'admin'
        ]);

      // On update, allow changes only to non-protected fields.
      allow update: if request.auth != null && request.auth.uid == userId
        && isNotChangingProtectedFields();

      allow delete: if request.auth != null && request.auth.uid == userId;
      
      match /businessCards/{cardId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /contacts/{contactId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Lifetime coupon tracking
    match /lifetimeCoupons/{couponId} {
      allow read, write: if false; // Admin SDK only
    }

    match /lifetimeCouponUsage/{usageId} {
      allow read, write: if false; // Admin SDK only
    }

    // Allow admin access to reports
    match /reports/{reportId} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
